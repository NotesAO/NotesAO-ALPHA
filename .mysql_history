SHOW GRANTS FOR 'clinicnotepro_sandbox_app'@'localhost';
SHOW GRANTS FOR 'clinicnotepro_ffltest_app'@'localhost';
SELECT user, host FROM mysql.user;
GRANT SELECT ON clinicnotepro_ffltest.* TO 'clinicnotepro_sandbox_app'@'localhost';
FLUSH PRIVILEGES;
SHOW GRANTS FOR 'clinicnotepro_sandbox_app'@'localhost';
EXIT;
-- Verify DB exists
SHOW DATABASES LIKE 'clinicnotepro_lakeview';
-- Grant all typical app privileges to the phpMyAdmin user
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, ALTER, INDEX, DROP,
       CREATE VIEW, SHOW VIEW, TRIGGER, EVENT, REFERENCES, LOCK TABLES
ON `clinicnotepro_lakeview`.* TO 'clinicnotepro'@'localhost';
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, ALTER, INDEX, DROP,        CREATE VIEW, SHOW VIEW, TRIGGER, EVENT, REFERENCES, LOCK TABLES ON `clinicnotepro_lakeview`.* TO 'clinicnotepro'@'localhost';
-- If phpMyAdmin or scripts sometimes connect via 127.0.0.1, grant that too:
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, ALTER, INDEX, DROP,
       CREATE VIEW, SHOW VIEW, TRIGGER, EVENT, REFERENCES, LOCK TABLES
ON `clinicnotepro_lakeview`.* TO 'clinicnotepro'@'127.0.0.1`;
FLUSH PRIVILEGES;
-- Sanity check
SHOW GRANTS FOR 'clinicnotepro'@'localhost';
SHOW GRANTS FOR 'clinicnotepro'@'127.0.0.1';
