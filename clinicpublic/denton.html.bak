<!DOCTYPE html>
<html>
<head>
<title>Change Form Action Based on selection</title>
<meta content="noindex, nofollow" name="robots">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="denton.js" type="text/javascript"></script>
<link href="denton.css" rel="stylesheet">
</head>
<body>
<div id="main">
<div id="first">
<h1>Notepro.co</h1>
<form id="myform" method="post" name="myform">
<label>User:</label>
<input type="text" name="username" placeholder="Username" id="username" required>
<label>Password :</label>
<input type="password" name="password" placeholder="Password" id="password" required>
<label>Clinic :</label>
<select id="clinic">
<option>--- Select Clinic ---</option>
<option>denton</option>
<option>denton2</option>
<option>ffltest</option>
</select>
<input class="submit" id="submit" type="submit" value="Submit">
</form>
</div>
</div>
		<script>
		// AJAX code
		let loginForm = document.querySelector('#first form');
		loginForm.onsubmit = event => {
			event.preventDefault();
			fetch(loginForm.action, { method: 'POST', body: new FormData(loginForm) }).then(response => response.text()).then(result => {
				if (result.toLowerCase().includes('success')) {
					window.location.href = 'https://denton.clinic.notepro.co/home.php';
				} else {
					document.querySelector('.msg').innerHTML = result;
				}
			});
		};
		</script>
</body>
</html>
